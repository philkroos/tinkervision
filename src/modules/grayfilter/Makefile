CC		:= g++

INC	:= -I/usr/include/tinkervision
ifeq ($(DEBUG),yes)
	CCFLAGS	:= -Wall -Werror -g -O0 -std=c++11 -fPIC -DDEBUG
	INC		+= `pkg-config --cflags opencv`
	LDFLAGS	:= `pkg-config --libs opencv`
else
	CCFLAGS	:= -Wall -Werror -O3 -std=c++11 -fPIC
endif

ifndef PRE
	PRE = /usr/lib/tinkervision
endif

LDFLAGS	+= -L/usr/lib/python2.7 -lpython2.7 -shared
INC		+= -I/usr/include/python2.7 -I/usr/include/tinkervision

SO		:= grayfilter.so
TV		:= interface/module.o interface/image.o interface/parameter.o
OBJ		:= grayfilter.o $(TV)

all: so

%.o: %.cc
	$(CC) $(CCFLAGS) -c $< -o $@ $(INC)

so: $(OBJ)
	$(CC) -o $(SO) $(OBJ) $(LDFLAGS)

.phony:
	clean

clean:
	rm -f *.o *.so interface/*.o

install: $(SO)
	install -m 544 $(SO) $(PRE)/$(SO)

.PHONY: install
